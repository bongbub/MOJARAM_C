<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recomm_style">


    <LinearLayout
        android:id="@+id/StyleCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/styleImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@drawable/style_example"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/styleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여성 수제 통가발 레인펌"
                android:textColor="@color/doubledarkgray"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <RatingBar
                android:id="@+id/rate_vote_avg"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:isIndicator="true"
                android:progress="5"
                android:progressBackgroundTint="@color/black"
                android:progressTint="@color/colorRateMovie"
                android:rating="4.0"
                android:stepSize="0.5"/>

            <TextView
                android:id="@+id/shop_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수제 통가발 긴 앞머리 레인펌 리빙코랄 컬러"
                android:textColor="@color/slategray"
                android:textSize="10sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/reservation_btn"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:text="체험하기"
                android:textColor="@color/white"
                android:textSize="11sp"/>

        </LinearLayout>


    </LinearLayout>


</FrameLayout>