<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <ImageView
            android:id="@+id/imageview_back"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:padding="3dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_back_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textview_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="쿠폰함"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="@id/imageview_back"
            app:layout_constraintBottom_toBottomOf="@id/imageview_back"
            app:layout_constraintStart_toEndOf="@id/imageview_back" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:padding="16dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/textview_mypage"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="내가 받은 쿠폰!"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                android:id="@+id/include_list_item_coupont1"
                layout="@layout/list_item_coupon1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title"/>

            <include
                android:id="@+id/include_list_item_coupont2"
                layout="@layout/list_item_coupon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/include_list_item_coupont1"/>

            <include
                android:id="@+id/include_list_item_coupont3"
                layout="@layout/list_item_coupon3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/include_list_item_coupont2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
