<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">


        <ImageView
            android:id="@+id/imageview_back"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:padding="3dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_back_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textview_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="홍길동님의 페이지"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="@id/imageview_back"
            app:layout_constraintBottom_toBottomOf="@id/imageview_back"
            app:layout_constraintStart_toEndOf="@id/imageview_back" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_my_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:elevation="5dp"
            app:layout_constraintTop_toBottomOf="@id/textview_mypage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageview_profile_image"
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="15dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_profile_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:text="홍길동"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toTopOf="@id/textview_id"
                    app:layout_constraintStart_toEndOf="@id/imageview_profile_image"
                    app:layout_constraintTop_toTopOf="@id/imageview_profile_image"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/textview_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:text="honghong32"
                    android:textColor="@color/moredarkgray"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageview_profile_image"
                    app:layout_constraintStart_toEndOf="@id/imageview_profile_image"
                    app:layout_constraintTop_toBottomOf="@id/textview_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textview_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cardview_my_info"
            app:layout_constraintStart_toStartOf="@id/cardview_my_info"/>

        <EditText
            android:id="@+id/edittext_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textSize="14dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/rectangle_gray_stroke_6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_name_2"/>


        <TextView
            android:id="@+id/textview_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/edittext_name"
            app:layout_constraintStart_toStartOf="@id/edittext_name"/>

        <EditText
            android:id="@+id/edittext_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textSize="14dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/rectangle_gray_stroke_6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_email"/>

        <TextView
            android:id="@+id/textview_interest_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관심 카테고리"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/edittext_email"
            app:layout_constraintStart_toStartOf="@id/edittext_email"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_categories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/textview_interest_category"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/logoutbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="30dp"
            android:text="로그아웃"
            android:backgroundTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/recyclerview_categories"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
