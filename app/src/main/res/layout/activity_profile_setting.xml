<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

            <ImageView
                android:id="@+id/imageview_back"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                android:padding="3dp"
                android:src="@drawable/ic_back_black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/spoqa_han_sans_neo_bold"
                android:text="홍길동"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/imageview_back"
                app:layout_constraintTop_toTopOf="@+id/imageview_back"
                app:layout_constraintLeft_toRightOf="@+id/imageview_back"/>

            <TextView
                android:id="@+id/textview_mypage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/spoqa_han_sans_neo_bold"
                android:text=" 님의 페이지"
                android:textColor="@color/doubledarkgray"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/user_name"
                app:layout_constraintTop_toTopOf="@+id/user_name"
                app:layout_constraintLeft_toRightOf="@+id/user_name"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_my_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_mypage">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageview_profile_image"
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="15dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_profile_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:text="홍길동"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toTopOf="@id/textview_email"
                    app:layout_constraintStart_toEndOf="@id/imageview_profile_image"
                    app:layout_constraintTop_toTopOf="@id/imageview_profile_image"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/textview_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:text="honghong32"
                    android:textColor="@color/moredarkgray"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageview_profile_image"
                    app:layout_constraintStart_toEndOf="@id/imageview_profile_image"
                    app:layout_constraintTop_toBottomOf="@id/textview_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textview_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:text="이름"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/cardview_my_info"
            app:layout_constraintTop_toBottomOf="@id/cardview_my_info" />

        <EditText
            android:id="@+id/edittext_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_gray_stroke_6dp"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_name_2" />


        <TextView
            android:id="@+id/textview_email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:text="이메일"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/edittext_name"
            app:layout_constraintTop_toBottomOf="@id/edittext_name" />

        <EditText
            android:id="@+id/edittext_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_gray_stroke_6dp"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_email_text" />

        <TextView
            android:id="@+id/textview_interest_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:text="관심 카테고리"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/edittext_email"
            app:layout_constraintTop_toBottomOf="@id/edittext_email" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_categories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_interest_category" />

        <Button
            android:id="@+id/logoutbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/black"
            android:text="로그아웃"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/recyclerview_categories" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
