<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <ImageView
            android:id="@+id/imageview_back"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:padding="3dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_back_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textview_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="문의 신청"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="@id/imageview_back"
            app:layout_constraintBottom_toBottomOf="@id/imageview_back"
            app:layout_constraintStart_toEndOf="@id/imageview_back" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/textview_mypage"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="요청 사항"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/et_inquiry"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="12dp"
                android:paddingTop="12dp"
                android:paddingHorizontal="12dp"
                android:paddingBottom="32dp"
                android:textColor="@color/doubledarkgray"
                android:background="@drawable/box_5r_1s"
                android:inputType="textMultiLine"
                android:hint="어플 사용중 궁금한점이나 도움이 필요하신가요? 언제든지 문의해 주세요!"
                android:maxLength="500"
                android:textSize="14sp"
                android:gravity="top"
                android:scrollbars="vertical"
                app:layout_constraintTop_toBottomOf="@id/tv_title"/>

            <TextView
                android:id="@+id/tv_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                tools:text="0/500"
                android:textColor="@color/doubledarkgray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/et_inquiry"
                app:layout_constraintBottom_toBottomOf="@id/et_inquiry"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="24dp"
                android:text="등록하기"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/basic_liner_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_inquiry"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
