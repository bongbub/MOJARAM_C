<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="android.view.View"/>
        <variable
            name="optionModel"
            type="com.example.mojaram.withdrawal.WithdrawalOptionModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/tv_option"
            android:layout_width="0dp"
            android:layout_height="45dp"
            tools:text="테스트"
            android:text="@{optionModel.optionText}"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_option"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/btn_option"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@{optionModel.isSelected == true ? @drawable/baseline_radio_button_checked_24 : @drawable/baseline_radio_button_unchecked_24}"
            android:backgroundTint="@{optionModel.isSelected == true ? @color/black : @color/littlegray}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_option"
            app:layout_constraintBottom_toBottomOf="@id/tv_option"/>

        <EditText
            tools:visibility="visible"
            android:visibility="@{optionModel.isSelected == true &amp;&amp; optionModel.isUserInput == true ? View.VISIBLE : View.GONE}"
            android:id="@+id/et_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="어떤게 불편하셨나요?"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:padding="12dp"
            android:background="@drawable/box_5r"
            android:backgroundTint="@color/gray"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_option"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>