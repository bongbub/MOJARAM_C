<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ai.ExampleActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageview_back"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:padding="3dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_back_black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textview_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 가이드"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:layout_marginVertical="15dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="@id/imageview_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/imageview_back"/>

            <ImageView
                android:id="@+id/imageview_example_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/exampale_1"
                app:layout_constraintTop_toBottomOf="@id/imageview_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <ImageView
                android:id="@+id/imageview_example_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/example_2"
                android:layout_marginTop="-40dp"
                app:layout_constraintTop_toBottomOf="@id/imageview_example_1"
                app:layout_constraintStart_toStartOf="@id/imageview_example_1"
                app:layout_constraintEnd_toEndOf="@id/imageview_example_1"/>

            <TextView
                android:id="@+id/textview_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="확인"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:background="@drawable/rectangle_green_5dp"
                android:elevation="5dp"
                android:paddingVertical="15dp"
                android:gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintTop_toBottomOf="@id/imageview_example_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.core.widget.NestedScrollView>
</layout>
