<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".admin.AdminSignUp">



    <LinearLayout
        android:id="@+id/linearLayout_AddshopText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매장 등록"
                android:textStyle="bold"
                android:textSize="20dp"/>

        </LinearLayout>

        <View
            android:id="@+id/view_bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/littlegray"
            app:layout_constraintTop_toBottomOf="@id/linearLayout_AddshopText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearlayout_shopName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/view_bar">
                    <TextView
                        android:id="@+id/shop_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매장명"
                        android:textStyle="bold"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textSize="20sp" />
                    <EditText
                        android:id="@+id/editText_shopname"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textSize="20sp"
                        android:hint="  "
                        android:background="@drawable/basic_liner_border" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/shop_address_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주소"
                        android:textStyle="bold"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textSize="20sp" />
                    <EditText
                        android:id="@+id/editText_shopaddress"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textSize="20sp"
                        android:hint="  "
                        android:background="@drawable/basic_liner_border"/>
                    <EditText
                        android:id="@+id/editText_shopaddress2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textSize="20sp"
                        android:hint="  "
                        android:background="@drawable/basic_liner_border"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/shop_phonnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="매장 전화번호"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="@font/spoqa_han_sans_neo_medium"/>
                        <TextView
                            android:id="@+id/numbernoti"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="필수요소 아님"
                            android:textSize="12sp"
                            android:textColor="@color/colorAccent"
                            android:fontFamily="@font/spoqa_han_sans_neo_medium"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/editText_shopNum"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textSize="20sp"
                        android:inputType="phone"
                        android:maxLength="13"
                        android:background="@drawable/basic_liner_border"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/shop_authentication"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="증빙자료"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"/>
                    <EditText
                        android:id="@+id/editText_Auth"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textSize="20sp"
                        android:background="@drawable/basic_liner_border"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/shop_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="영업시간"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/editText_shopHours"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/spoqa_han_sans_neo_medium"
                            android:textSize="20sp"
                            android:background="@drawable/basic_liner_border"/>
                        <TextView
                            android:id="@+id/price_plusbtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:layout_margin="5dp"
                            android:text="+"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="@drawable/button_background_round_color"
                            />

                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/shop_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가격정보"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"/>
                    <EditText
                        android:id="@+id/editText_shopPrice"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textSize="20sp"
                        android:background="@drawable/basic_liner_border"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp">

                    <TextView
                        android:id="@+id/buttonSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="제출하기"
                        android:textSize="20dp"
                        android:background="@drawable/button_background3"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"/>


                </LinearLayout>



            </LinearLayout>

        </androidx.core.widget.NestedScrollView>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>