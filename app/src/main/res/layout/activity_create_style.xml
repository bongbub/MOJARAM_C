<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ai.CreateStyleActivity">

        <ImageView
            android:id="@+id/imageview_back"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:padding="3dp"
            android:src="@drawable/ic_back_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="15dp"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:text="스타일 생성"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@id/imageview_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageview_back" />


        <ImageView
            android:id="@+id/imageview_upload_hair"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_upload_picture"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/imageview_upload_dyeing"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageview_back" />

        <ImageView
            android:id="@+id/imageview_upload_dyeing"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_upload_picture"
            app:layout_constraintBottom_toBottomOf="@id/imageview_upload_hair"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageview_upload_hair"
            app:layout_constraintTop_toTopOf="@id/imageview_upload_hair" />


        <include
            android:id="@+id/button_hairstyle"
            layout="@layout/button_uplaod_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:buttonText="@{`헤어스타일`}"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="@id/imageview_upload_hair"
            app:layout_constraintStart_toStartOf="@id/imageview_upload_hair"
            app:layout_constraintTop_toBottomOf="@id/imageview_upload_hair"
            app:necessary="@{true}" />

        <include
            android:id="@+id/button_dyeing"
            layout="@layout/button_uplaod_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:buttonText="@{`염색`}"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="@id/imageview_upload_dyeing"
            app:layout_constraintStart_toStartOf="@id/imageview_upload_dyeing"
            app:layout_constraintTop_toBottomOf="@id/imageview_upload_dyeing"
            app:necessary="@{false}" />

        <TextView
            android:id="@+id/textview_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="예약하기"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/rectangle_green_5dp"
            android:elevation="5dp"
            android:paddingVertical="15dp"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintTop_toBottomOf="@id/button_hairstyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textview_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="표시는 필수요소 입니다."
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:elevation="5dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@id/textview_create"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/textview_create"/>

        <TextView
            android:id="@+id/textview_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* "
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textSize="14dp"
            android:textColor="@color/red"
            android:elevation="5dp"
            app:layout_constraintTop_toTopOf="@id/textview_notice"
            app:layout_constraintBottom_toBottomOf="@id/textview_notice"
            app:layout_constraintEnd_toStartOf="@id/textview_notice"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
