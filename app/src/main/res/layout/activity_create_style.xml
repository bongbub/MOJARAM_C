<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ai.CreateStyleActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageview_back"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:padding="3dp"
                android:src="@drawable/ic_back_black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textview_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:text="스타일 생성"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@id/imageview_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/imageview_back" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageview_face"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="50dp"
                app:shapeAppearanceOverlay="@style/radius_10"
                android:src="@drawable/ic_upload_picture"
                android:scaleType="centerCrop"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageview_back" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageview_upload_hair"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                app:shapeAppearanceOverlay="@style/radius_10"
                android:src="@drawable/ic_upload_picture"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/imageview_upload_dyeing"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageview_face" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageview_upload_dyeing"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="20dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/radius_10"
                android:src="@drawable/ic_upload_picture"
                app:layout_constraintBottom_toBottomOf="@id/imageview_upload_hair"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageview_upload_hair"
                app:layout_constraintTop_toTopOf="@id/imageview_upload_hair" />


            <include
                android:id="@+id/button_hairstyle"
                layout="@layout/button_uplaod_picture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:buttonText="@{@string/hair_style}"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="@id/imageview_upload_hair"
                app:layout_constraintStart_toStartOf="@id/imageview_upload_hair"
                app:layout_constraintTop_toBottomOf="@id/imageview_upload_hair"
                app:necessary="@{true}" />

            <include
                android:id="@+id/button_dyeing"
                layout="@layout/button_uplaod_picture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:buttonText="@{@string/dyeing}"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="@id/imageview_upload_dyeing"
                app:layout_constraintStart_toStartOf="@id/imageview_upload_dyeing"
                app:layout_constraintTop_toBottomOf="@id/imageview_upload_dyeing"
                app:necessary="@{false}" />

            <TextView
                android:id="@+id/textview_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="예약하기"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:background="@drawable/rectangle_green_5dp"
                android:elevation="5dp"
                android:paddingVertical="15dp"
                android:gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintTop_toBottomOf="@id/button_hairstyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textview_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="표시는 필수요소 입니다."
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:elevation="5dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@id/textview_create"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/textview_create"/>

            <TextView
                android:id="@+id/textview_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* "
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:textSize="14dp"
                android:textColor="@color/red"
                android:elevation="5dp"
                app:layout_constraintTop_toTopOf="@id/textview_notice"
                app:layout_constraintBottom_toBottomOf="@id/textview_notice"
                app:layout_constraintEnd_toStartOf="@id/textview_notice"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/alpha20_black">


            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:indeterminateTint="@color/green_a8e"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintBottom_toTopOf="@id/textview_in_progress"/>

            <TextView
                android:id="@+id/textview_in_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/on_image_uploading"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textSize="18dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/progressbar"
                app:layout_constraintStart_toStartOf="@id/progressbar"
                app:layout_constraintEnd_toEndOf="@id/progressbar"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_createing_ai_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageview_creating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_creating_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>
