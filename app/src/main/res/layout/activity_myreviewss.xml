<?xml version="1.0" encoding="utf-8"?>

<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container_myreviewss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReviewWriteActivity"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.1"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/img_group"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_left" />
            <TextView
                android:id="@+id/text_my_review_title"
                android:layout_width="127.66dp"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:lineHeight="22dp"
                android:maxLines="3"
                android:text="나의 리뷰"
                android:textColor="#FF313131"
                android:textSize="24dp" />
        </LinearLayout>


        <View
            android:layout_width="350dp"
            android:layout_height="2px"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3"
            android:alpha="0.5"
            android:background="#000000" />


        <TextView
            android:id="@+id/text_write_review"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:background="@drawable/drawable_shape_2"
            android:text="리뷰 쓰기"
            android:textColor="#FF313131"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            />

        <TextView
            android:id="@+id/text_my_written_review"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:background="@drawable/drawable_shape_2"
            android:text="내가 쓴 리뷰"
            android:textColor="#FF313131"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_back"
            app:layout_constraintStart_toStartOf="@+id/text_write_review"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
