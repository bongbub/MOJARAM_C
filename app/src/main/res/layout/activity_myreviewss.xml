<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_myreviewss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReviewWriteActivity"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.1"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/img_group"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_left" />
            <TextView
                android:id="@+id/text_my_review_title"
                android:layout_width="127.66dp"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:lineHeight="22dp"
                android:maxLines="3"
                android:text="나의 리뷰"
                android:textColor="#FF313131"
                android:textSize="24dp" />
        </LinearLayout>


        <View
            android:id="@+id/view"
            android:layout_width="350dp"
            android:layout_height="2px"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:alpha="0.5"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/text_write_review"
            android:layout_width="165dp"
            android:layout_height="65dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="23dp"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="리뷰 쓰기"
            android:textAlignment="center"
            android:textSize="17dp"
            android:textColor="#274C77"
            android:background="@drawable/basic_liner_border"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_back" />

        <TextView
            android:id="@+id/text_my_written_review"
            android:layout_width="165dp"
            android:layout_height="65dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="23dp"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="리뷰 삭제"
            android:textAlignment="center"
            android:textColor="#274C77"
            android:background="@drawable/basic_liner_border"
            android:textSize="17dp"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_write_review"
            app:layout_constraintTop_toBottomOf="@+id/layout_back" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
