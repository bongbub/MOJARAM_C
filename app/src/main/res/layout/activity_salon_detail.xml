<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <!-- parallax: 스크롤 시 접힘 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax">

                    <ImageView
                        android:id="@+id/imageview_salon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintDimensionRatio="1.6:1"
                        tools:background="@drawable/salon_dummy_pic"
                        android:background="@color/white"
                        app:layout_collapseMode="parallax"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <ImageView
                        android:id="@+id/imageview_cover"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintDimensionRatio="1.6:1"
                        app:layout_collapseMode="parallax"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/rectangle_top_10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- pin: 스크롤 시 고정 -->
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="pin">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imageview_back"
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:padding="3dp"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/ic_back_white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/textview_salon_name_collapse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="살롱드라피네 양재역점"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:fontFamily="@font/spoqa_han_sans_neo_medium"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/textview_salon_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="살롱드라피네 양재역점"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" />

                <ImageView
                    android:id="@+id/imageview_star"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/ic_star"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/textview_salon_name"
                    app:layout_constraintStart_toStartOf="@id/textview_salon_name"/>

                <TextView
                    android:id="@+id/textview_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.9"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    app:layout_constraintTop_toTopOf="@id/imageview_star"
                    app:layout_constraintBottom_toBottomOf="@id/imageview_star"
                    app:layout_constraintStart_toEndOf="@id/imageview_star"
                    android:layout_marginStart="5dp" />

                <TextView
                    android:id="@+id/textview_rating_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/ 5.0"
                    android:textColor="@color/moredarkgray"
                    android:textSize="14dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    app:layout_constraintTop_toTopOf="@id/imageview_star"
                    app:layout_constraintBottom_toBottomOf="@id/imageview_star"
                    app:layout_constraintStart_toEndOf="@id/textview_rating"
                    android:layout_marginStart="5dp" />

                <View
                    android:id="@+id/view_border"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@color/background_color"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageview_star"/>

                <ImageView
                    android:id="@+id/imageview_work_time"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_schedule"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/view_border"
                    app:layout_constraintStart_toStartOf="@id/imageview_star"/>

                <TextView
                    android:id="@+id/textview_work_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영업시간"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    app:layout_constraintTop_toTopOf="@id/imageview_work_time"
                    app:layout_constraintBottom_toBottomOf="@id/imageview_work_time"
                    app:layout_constraintStart_toEndOf="@id/imageview_work_time" />

                <TextView
                    android:id="@+id/textview_work_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:00 ~ 21:30"
                    android:textColor="@color/doubledarkgray"
                    android:textSize="14dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    app:layout_constraintTop_toBottomOf="@id/textview_work_time"
                    app:layout_constraintStart_toStartOf="@id/imageview_work_time"
                    android:layout_marginTop="6dp" />


                <ImageView
                    android:id="@+id/imageview_info"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_shop"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/textview_work_time_value"
                    app:layout_constraintStart_toStartOf="@id/imageview_work_time"/>

                <TextView
                    android:id="@+id/textview_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="매장정보"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    app:layout_constraintTop_toTopOf="@id/imageview_info"
                    app:layout_constraintBottom_toBottomOf="@id/imageview_info"
                    app:layout_constraintStart_toEndOf="@id/imageview_info" />

                <TextView
                    android:id="@+id/textview_info_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:text="@string/dummy_salon_info"
                    android:textColor="@color/doubledarkgray"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/imageview_info"
                    app:layout_constraintTop_toBottomOf="@id/textview_info" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_buttons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/textview_info_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="20dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/gray"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <include
                        android:id="@+id/button_like"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        layout="@layout/button_salon_detail"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/button_location"
                        app:buttonIcon="@{@drawable/mojaram_heart}"
                        app:buttonName="@{`96`}"/>

                    <include
                        android:id="@+id/button_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        layout="@layout/button_salon_detail"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/button_like"
                        app:layout_constraintEnd_toStartOf="@id/button_phone"
                        app:buttonIcon="@{@drawable/mojaram_marker}"
                        app:buttonName="@{`위치`}"/>

                    <include
                        android:id="@+id/button_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        layout="@layout/button_salon_detail"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/button_location"
                        app:layout_constraintEnd_toStartOf="@id/button_share"
                        app:buttonIcon="@{@drawable/mojaram_phone}"
                        app:buttonName="@{`전화`}"/>

                    <include
                        android:id="@+id/button_share"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        layout="@layout/button_salon_detail"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/button_phone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:buttonIcon="@{@drawable/mojaram_share}"
                        app:buttonName="@{`공유`}"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textview_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="리뷰"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    app:layout_constraintTop_toBottomOf="@id/layout_buttons"
                    app:layout_constraintStart_toStartOf="@id/layout_buttons"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/textview_review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/doubledarkgray"
                    android:textSize="16dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    app:layout_constraintTop_toTopOf="@id/textview_review"
                    app:layout_constraintBottom_toBottomOf="@id/textview_review"
                    app:layout_constraintStart_toEndOf="@id/textview_review"
                    android:layout_marginStart="5dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_reviews"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@id/textview_review"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="100dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="작성된 리뷰가 없어요."
                        android:textSize="16dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_regular"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/textview_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="예약하기"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/rectangle_red_5dp"
            android:elevation="5dp"
            android:paddingVertical="15dp"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="bottom"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
